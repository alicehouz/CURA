<div class="pharmacies-container">

  <div class="pharmacies-header">
    <div class="text-my-pharmacies">
      <%= link_to welcome_path do%>
      <i class="fas fa-chevron-left chevron-style"></i>
      <%end%>
      <h2 class="h2-style">Pharmacies</h2>
    </div>
  </div>
</div>

<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>

<div class="pharmacies-body">
  <% @pharmacies.each do |pharmacie| %>
  <div class="card-category">
    <div class="pharmacie-name"><%= pharmacie.name %></div>
    <div class="pharmacie-address">Address : <%= pharmacie.address %></div>
     <div class="pharmacie-phone-number">Phone : <%= pharmacie.phone_number %></div>
    <div class="show-delete">
      </button>
    </div>
  </div>
  <% end %>
</div>
