<div class="container-signin">
  <%= image_tag "pharmacist.png", class: "pharmacist-img" %>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  label: false,
                  required: false,
                  autofocus: true,
                  input_html: { placeholder: "Email", autocomplete: "email", class: "signin-form-input" }
                   %>
      <%= f.input :password,
                  label: false,
                  required: false,
                  input_html: { placeholder: "Password", autocomplete: "current-password", class: " signin-form-input password-entry" } %>
      <%= f.input :remember_me, as: :boolean, input_html: { class: "remember-me" } if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn-blue" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
