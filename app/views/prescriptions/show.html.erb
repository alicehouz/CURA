<div class="prescriptions-container">
  <%= render 'shared/navbar' %>
  <div class="prescriptions-header">
    <div class="text-my-prescriptions">
      <%= link_to prescriptions_path do%>
      <i class="fas fa-chevron-left chevron-style"></i>
      <%end%>
      <h2 class="h2-style"><%= @prescription.prescription_name %></h2>
    </div>
  </div>
</div>
<div class="prescription">
  <div class="img-card"><%= cl_image_tag @prescription.image %></div>
  <div class="show-prescription-name">Validity of the prescription :</div>
  <div class="show-prescription-date">Prescription date : <%= @prescription.prescription_start_date %></div>
  <div class="show-prescription-date">Expiration date : <%= @prescription.prescription_expiry_date %></div>
  <div class="make-an-order-and-delete">
    <button type="button" class="btn btn-outline-light btn-outline-style-make-an-order" ><%= link_to "Make an order", new_prescription_order_path(@prescription) %></button>
    <button type="button" class="btn btn-outline-light btn-outline-style-delete" ><%= link_to "Delete", prescription_path, method: :delete %></button>
  </div>
</div>
