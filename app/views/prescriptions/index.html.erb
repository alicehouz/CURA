<div class="prescriptions-container">

  <div class="prescriptions-header">
    <div class="text-my-prescriptions">
      <%= link_to welcome_path do%>
      <i class="fas fa-chevron-left chevron-style"></i>
      <%end%>
      <h2 class="h2-style"> Mes Prescriptions</h2>
    </div>
  </div>
</div>
<div class="prescriptions-body">
  <% @prescriptions.each do |prescription| %>
  <div class="card-category">
    <div class="prescription-name"><%= prescription.prescription_name %></div>
    <div class="prescription-date">DÃ©but de la prescrition : <%= prescription.prescription_start_date %></div>
    <div class="prescription-date">Fin de la prescription : <%= prescription.prescription_expiry_date %></div>
    <div class="show-delete">
      <button type="button" class="btn btn-outline-light btn-outline-style-show-index" ><%= link_to "Afficher", prescription_path(prescription) %></button>
      <button type="button" class="btn btn-outline-light btn-outline-style-delete-index" ><%= link_to "Suprimer", prescription_path(prescription.id), method: :delete %>
      </button>
    </div>
  </div>
  <% end %>

</div>
