<div class="address-contaier">
  <div class="address-header">
    <div class="placeaddress d-flex justify-content-start">
      <%= link_to welcome_path do%>
      <%= image_tag ("left-arrow.png"), class: "arrow-address" %>
      <%end%>
      <h2 class="text-header-address">Placing an order</h2>
    </div>
    <div class="address-steps">
      <%= image_tag ("2.png"), class: "steps-address" %>
    </div>
  </div>
  <div class="newaddress-order">

    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <p class="modal-title" id="exampleModalLabel">Modal title</p>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <div class="form-order-address">


              <div class="modal-footer">


            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
  <div class="address-body">
    <p class="addressbody-text">choosing your address</p>
    <div class="white-container-address">
      <%= simple_form_for [@prescription, @order] do |f| %>
              <div class="inputs-order-address">
              <%= f.input :street_name, input_html: { value: current_user.street_name },label: false %>
              <%= f.input :zip_code, input_html: { value: current_user.zip_code } ,label: false%>
              <%= f.input :city, input_html: { value: current_user.city },label: false %>
              </div>
      <div class="select-this-address">
       <button type="submit" class="selectaddr" ">
    + select this address
    </button>
      </div>
    </div>
  </div>
  <div class="white-footer-address">

              <% end %>

  </div>
</div>
