<div class="orders-container">
  <div class="orders-header">
    <div class="text-my-orders">
      <%= link_to welcome_path do%>
      <i class="fas fa-chevron-left chevron-style"></i>
      <%end%>
      <h2 class="h2-style">Mes commandes</h2>
    </div>
  </div>
</div>
<div class="orders-body">
  <% @orders.each do |order| %>
  <div class="card-category-orders">

    <div class="colored-hover">
      <h6 class="card-subtitle mb-2 text-muted">Commande<br> #<%= order.order_number %></h6>
      <h6 class="card-subtitle mb-2 text-muted"><%= order.order_status %></h6>
    </div>
    <div class="show-delete d-flex">
      <div class="show-delete-address d-flex">
        <%= image_tag ("process.png"), class: "process-logo", style: "height: 95%;" %>
        <div>
          <p class="card-text"><%= order&.pharmacie&.address || "En attente de la pharmacie" %></p>
          <p class="card-text"><%= order.street_name %> </p>
        </div>
      </div>
      <div class="d-flex align-items-center justify-content-between">
        <div>
        <%= link_to order_path(order) do %>
        <%= image_tag ("see-more.svg"), class: "see-more-logo" %>
        <% end %>
        <%= link_to prescription_order_path(order.prescriptions.first, order.id), method: :delete do %>
        <%= image_tag ("rubbish-bin.svg"), class: "rubbish-bin-logo" %>
        <% end %>
        </div>
      <p class="m-0">2.5â‚¬</p>
      </div>
    </div>

  </div>
  <% end %>
</div>
<div class="d-flex align-items-end">
  <%= render 'shared/footer' %>
</div>
