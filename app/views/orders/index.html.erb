<h1>My orders</h1>

<% @orders.each do |order| %>
  <% if order.order_status == "pending" %>
   <div class="card" style="width: 18rem;">
    <div class="card-body">
     <h5 class="card-title"><%= order.prescriptions.first.prescription_name if order.prescriptions.present? %></h5> <%= order.id%></
      <h6 class="card-subtitle mb-2 text-muted">Status - <%= order.order_status %></h6>
      <p class="card-text">Date order : <%= order.order_date %></p>
      <p><%= link_to "show", order_path(order) %></p>
      <p><%= link_to "delete", order_path(order), method: :delete %></p>
    </div>
  </div>
  <% end %>
<% end %>
