<div class= "welcome-container">
  <div class="welcome-header">

    <div class ="text-welcome-user">
      <% if user_signed_in? %>
      <h2 id="font-welcome">Bienvenue sur Cura...</h2>
      <h2 id="name-user-welcome" > <mark><%=current_user.first_name%></mark></h2>
        <p id="font-address-home"> <i class="fas fa-map-marker-alt"></i> Votre addresse de livraison: <%= current_user.street_name%>, <%current_user.zip_code %><%current_user.city %></p>
      <%else%>
      <h2 id="font-welcome-user">Bienvenue sur Cura</h2>
      <h2 id="name-user-welcome"><strong>Our dear patient</strong></h2>
      <%= link_to welcome_path do %>
      <%= @user.current_user.avatar %>
      <%end%>
      <%end%>
    </div>
  </div>
  <div class="welcome-body">
    <div class="scan ">
      <a  class="button-welcome" id="scan-icon" data-toggle="modal" data-target="#exampleModal"><%= image_tag ("scan.png"), class: "scan-photo grow" %></a>
      <div class ="text-welcome" >
        <p class ="scan-text">Scannez</p>
        <p class="scan-para">votre ordonnance</p>
      </div>
    </div>
    <div class="schedule ">
      <a class="button-welcome" ><%= image_tag ("calendar.png"), class: "schedule-photo grow" %></a>
      <div class ="text-welcome" >
        <p class ="scan-text">Plannifiez</p>
        <p class="scan-para">votre ordonnance</p>
      </div>
    </div>
    <div class="search ">
      <a class="button-welcome" ><%= image_tag ("search.png"), class: "search-photo grow" %></a>
      <div class ="text-welcome" >
        <p class ="scan-text">Recherchez</p>
        <p class="scan-para">un autre produit</p>
      </div>
    </div>
  </div>


  <div class="welcome-footer-home">
    <ul class="footer-menu d-flex  justify-content-around"">
       <%= link_to welcome_path do%>
      <li class="list"><%= image_tag ("home.png"), class: "homeicon grow" %></li>
      <% end %>
      <%= link_to orders_path do%>
      <li class="list"><%= image_tag ("orders-white.png"), class: "ordersicon grow" %></li>
       <% end %>
       <%= link_to prescriptions_path do%>
      <li class="list"><%= image_tag ("pres-white.png"), class: "presicon grow" %></li>
         <% end %>
      <%= link_to destroy_user_session_path, method: :delete do%>
       <li class="list"><%= image_tag ("logout-white.png"), class: "logicon grow" %></li>
       <% end %>


    </ul>


  </div>
  <div>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-container">
          <div class="pop-up-header">
            <div class="modal-title" id="cameradiv">
              <%= image_tag ("photo-camera.png"), class: "camera-photo" %>
              <p id = "camera-text">Camera</p>
            </div>
          </div>
          <div class="pop-up-body">
            <div class="attachfile">
               <%= image_tag ("cloud-upload.png"), class: "cloud-upload" %>
               <p id = "upload-text">Upload</p>

            </div>


            <%= simple_form_for @prescription do |f| %>

            <%= f.input :image, input_html: { accept: "image/*", capture: "camera" ,class: "file" }, label: false %>
            <%= f.input :image_cache, as: :hidden, class: "fileattached" %>

         <button type="submit" class="modal-title" id="clouddiv">


            <%= image_tag ("cloud-upload.png"), class: "cloud-photo" %>
            <p id = "upload-text">Télécharger</p>
            </button>
            <% end %>

          </div>
        </div>
        <div class="pop-up-footer">
          <button type="button"  data-dismiss="modal" class="button-pop-up"> Close</button>
        </div>
      </div>
    </div>


<script>

  const input = document.querySelector(".file");// Selection l'input
  const submit = document.querySelector("#clouddiv");// Selection button submit

  const clickUpload = () => {
    submit.click();
  }

  input.addEventListener('change', clickUpload);



</script>
